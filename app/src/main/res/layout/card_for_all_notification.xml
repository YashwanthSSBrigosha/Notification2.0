<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/all_notification_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/group" />

        <TextView
            android:id="@+id/all_notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/all_notification_icon"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@id/all_notification_icon"
            android:text="New registration request" />

        <TextView
            android:id="@+id/viewInfo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/all_notification_title"
            android:layout_alignStart="@+id/all_notification_title"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_bold"
            android:text="VIEW INFO \u2192"
            android:textColor="#1089FF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewInfo_text"
            android:layout_alignStart="@id/viewInfo_text"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="18dp"
            android:text="12/04/2021" />

        <TextView
            android:id="@+id/dot_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u25cf"
            android:layout_toEndOf="@id/date_tv"
            android:layout_alignTop="@id/date_tv"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:00 AM"
            android:layout_toEndOf="@id/dot_tv"
            android:layout_alignTop="@id/date_tv"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>